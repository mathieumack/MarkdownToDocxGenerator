<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
  <TargetFrameworks>netstandard2.0;net9.0;net10.0</TargetFrameworks>
    <Authors>MACK Mathieu</Authors>
    <Company>MACK Mathieu</Company>
    <Description>Helper library that let you generate Word document based on markdown files.</Description>
    <PackageTags>devops;docx;markdown</PackageTags>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <ProjectGuid>{D3F625A4-B577-4B40-A2B7-084FF8CAC924}</ProjectGuid>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <LangVersion>preview</LangVersion>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Copyright>Copyright (c) MACK Mathieu</Copyright>
    <PackageProjectUrl>https://github.com/mathieumack/MarkdownToDocxGenerator</PackageProjectUrl>
    <RepositoryUrl>https://github.com/mathieumack/MarkdownToDocxGenerator</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

	<ItemGroup>
		<None Include="..\..\README.md" Pack="true" PackagePath="\" />
	</ItemGroup>

    <!-- Dependencies for net9.0 -->
    <ItemGroup Condition="'$(TargetFramework)' == 'net9.0'">
	  <PackageReference Include="Markdig" Version="0.42.0" />
      <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="9.0.10" />
      <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="9.0.10" />
      <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="9.0.10" />
	  <PackageReference Include="OpenXMLSDK.Engine" Version="2022.10313.0-preview-044" />
    </ItemGroup>

    <!-- Dependencies for net10.0 -->
    <ItemGroup Condition="'$(TargetFramework)' == 'net10.0'">
      <PackageReference Include="Markdig" Version="0.42.0" />
      <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="10.0.0-rc.1.25451.107" />
      <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="10.0.0-rc.1.25451.107" />
      <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="10.0.0-rc.1.25451.107" />
      <PackageReference Include="OpenXMLSDK.Engine" Version="2022.10313.0-preview-044" />
    </ItemGroup>

    <!-- Dependencies for netstandard2.0 -->
    <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
      <PackageReference Include="Markdig" Version="0.42.0" />
      <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="10.0.0-rc.1.25451.107" />
      <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="10.0.0-rc.1.25451.107" />
      <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="10.0.0-rc.1.25451.107" />
      <PackageReference Include="OpenXMLSDK.Engine" Version="2022.10313.0-preview-044" />
    </ItemGroup>
</Project>
